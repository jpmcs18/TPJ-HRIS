@model WebTemplate.Models.Maintenance.Systems.Page.Management
@{
    var entity = new DataAccessLayer.System.NavMenu();
    var navmenu = entity.LookupNavMenu();
}

<div class="modal-header">
    <h5 class="modal-title">Page Management</h5>
</div>
<div class="modal-body">
    <div class="row">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m._Page.ID)
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.PageName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.PageName, new { @class = "form-control text-transform-none" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.PageName)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.Module, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.Module, new { @class = "form-control text-transform-none" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.Module)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.URL, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.URL, new { @class = "form-control text-transform-none" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.URL)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.NavMenuId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m._Page.NavMenuId, new SelectList(navmenu, "ID", "NavTitle"), "N/A", new { @class = "form-control" })
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.PageOrder, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.PageOrder, new { @class = "form-control touchspin" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.PageOrder)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.UserManualURL, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.UserManualURL, new { @class = "form-control text-transform-none" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.UserManualURL)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.Remarks, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.Remarks, new { @class = "form-control" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.Remarks)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.Namespace, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.Namespace, new { @class = "form-control text-transform-none" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.Namespace)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.Controller, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.Controller, new { @class = "form-control text-transform-none" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.Controller)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.Action, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.Action, new { @class = "form-control text-transform-none" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.Action)
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6 col-md-4 col-lg-4">
            @Html.LabelFor(m => m._Page.Application, new { @class = "control-label" })
            @Html.TextBoxFor(m => m._Page.Application, new { @class = "form-control text-transform-none", @readonly = "readonly", @value=@Model._Page.Application })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m._Page.Application)
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-outline btn-w-m font-bold-700" data-dismiss="modal" onclick="search()">Close</button>
    <button type="button" class="btn btn-primary btn-w-m font-bold-700" id="btnsave">Save</button>
</div>
@model WebTemplate.Models.Maintenance.Systems.User.VerifyMobile

<div class="modal-header">
    <h5 class="modal-title">Mobile Number Verification</h5>
</div>
<div class="modal-body">
    @if (!Model.Verified)
    {
        <div class="row m-t-sm m-b-md">
            <div class="col-md-12">
                <div class="text-center">
                    <label class="col-form-label">A Verification Code was sent to the mobile number:<br /> @String.Format("{0}{1}", Model.MobileNumberPrefix, Model.MobileNumber)<br /> Did not receive code? <a id="btn_resend"> Click Here to Resend. </a></label>
                    @if (Model.Resend)
                    {
                        <br />
                        <span class="text-info">Resend code success.</span>
                    }
                </div>
            </div>
        </div>
        <div class="row m-b-sm">
            <div class="col-md-12">
                <form id="form_verify">
                    @Html.HiddenFor(m => m.UserID)
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control text-transform-none", @placeholder = "Enter the Verification Code here..." })
                </form>
            </div>
        </div>
        <div class="row m-b-sm">
            <div class="col-md-12">
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.Code)
                </div>
            </div>
        </div>
        
    }
    else
    {
        <div class="row m-t-lg m-b-md">
            <div class="col-md-12">
                <div class="text-center">
                    <label class="col-form-label">The number @String.Format("{0}{1}", Model.MobileNumberPrefix, Model.MobileNumber) is verified. you can now close this window.</label>
                </div>
            </div>
        </div>
    }
</div>
<div class="modal-footer">
    <a class="btn btn-primary btn-outline btn-w-m" data-dismiss="modal" data-id="@Model.UserID" id="btn_close_verify">Close</a>
    @if (!Model.Verified)
    {
        <button type="button" id="btn_confirm_verify" class="btn btn-primary btn-w-m">Confirm</button>
    }
</div>
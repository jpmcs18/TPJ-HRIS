@model ProcessLayer.Entities.Vessel
@{
    var VesselPageAccess = (Session["CredentialPages"] as DataAccessLayer.Security.CredentialPages).GetPage("Movement/VesselMovement");
}

<tr id="@Model.ID" class="Row-Display Row-Display-Vessel read" style="" title="" @*onclick="ViewVesselMovement(@Model.ID)"*@>
    <td nowrap class="text-center">
        <input type="hidden" value="@Model.ID" />
        @Model.Description
    </td>
    <td style="" class="row-actions">
            <div class="btn-group">
                @if (VesselPageAccess.Update || VesselPageAccess.Delete || VesselPageAccess.View)
                {
                    <button type="button" name="ViewCrews" class="btn btn-outline btn-info btn-sm btn-rounded ViewCrews m-l-sm" value="@Model.ID" title="View Crews"><i class="fa fa-group fa-1x"></i></button>
                }
                @if (VesselPageAccess.Update || VesselPageAccess.Delete || VesselPageAccess.View)
                {
                    <button type="button" name="ViewVesselMovement" class="btn btn-outline btn-success btn-sm btn-rounded ViewVesselMovement" value="@Model.ID" title="View Vessel Movement"><i class="fa fa-ship fa-1x"></i></button>
                }
            </div>
        </td>
</tr>
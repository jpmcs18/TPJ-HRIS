@model ProcessLayer.Entities.VesselMovement

@{
    var PageAccess = (Session["CredentialPages"] as DataAccessLayer.Security.CredentialPages).GetPage("HumanResource/VesselMovement");

    var movementTypes = ProcessLayer.Processes.LookupProcess.GetVesselMovementType().Where(m => m.ID != Model.MovementStatusID);
    //var voyageTypes = ProcessLayer.Processes.LookupProcess.GetVesse
    var locations = ProcessLayer.Processes.LocationProcess.Instance.GetList();
}

<div id="NewVoyageDiv">
    <div class="row">
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-push-4 col-lg-4">
            <label class="control-label">Request Date</label>
            @Html.TextBox("VoyageStartDate", String.Format("{0:yyyy'-'MM'-'dd}", DateTime.Now), new { @type = "date", @class = "form-control voyage-main" })
        </div>
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-push-4 col-lg-4">
            <label class="control-label">Request Date</label>
            @Html.TextBox("VoyageEndDate", String.Format("{0:yyyy'-'MM'-'dd}", DateTime.Now), new { @type = "date", @class = "form-control voyage-main" })
        </div>
        @*<div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-4">
                <label class="control-label"></label>
                @Html.DropDownList("VoyageStatusID", new SelectList(absenceSubTypes, "Key", "Value", 1), new { @class = "form-control" })
            </div>*@
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-4">
            <label class="control-label"></label>
            @Html.DropDownList("OriginLocationID", new SelectList(locations, "ID", "Description", 1), new { @class = "form-control" })
        </div>
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-4">
            <label class="control-label"></label>
            @Html.DropDownList("DestinationLocationID", new SelectList(locations, "ID", "Description", 1), new { @class = "form-control" })
        </div>
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-push-4 col-lg-4">
            <label class="control-label">Request Date</label>
            @Html.TextBox("ETA", String.Format("{0:yyyy'-'MM'-'dd}", DateTime.Now), new { @type = "date", @class = "form-control voyage-main" })
        </div>
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-push-4 col-lg-4">
            <label class="control-label">Request Date</label>
            @Html.TextBox("ETD", String.Format("{0:yyyy'-'MM'-'dd}", DateTime.Now), new { @type = "date", @class = "form-control voyage-main" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <label class="control-label">Reasons</label>
            @Html.TextArea("VoyageDetails", new { @class = "form-control voyage-main", @rows = "4", @placeholder = "Details..." })
        </div>
    </div>
</div>
@model WebTemplate.Models.CrewMovement.CrewMovement

<div id="CrewMovementParameters" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding: 0px;">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align: left;">
        <h3 style="margin-bottom: 10px; margin-top: 0;">
            <text id="BackToCrewListDiv">
                @*<i id="BackToCrewList" class="fa fa-arrow-left m-r-sm" style="cursor: pointer" title="Back"></i>*@
            </text>
            <i id="RefreshCrewMovement" class="fa fa-refresh m-r-lg hidden" style="cursor: pointer" title="Refresh"></i>

            <img src="@(String.IsNullOrEmpty(Model.Personnel.ImagePath) ? "\\Images\\default.jpg": Model.Personnel.ImagePath)" style="height: 30px; width: 30px; min-height: 40px; min-width: 40px; border: 3px solid #eaeaea; margin-right: 10px; border-radius: 50px;" title="" />

            @Html.Raw(String.Format("<b>{0}</b>, {1} {2}<br/>", Model.Personnel.LastName, Model.Personnel.FirstName, Model.Personnel.MiddleName))
        </h3>
    </div>

    <input type="hidden" id="PersonnelID" value="@Model.PersonnelID" name="PersonnelID" />
</div>

<div id="CrewMovementParams" class="col-xs-12 col-sm-push-1 col-sm-10 col-md-push-2 col-md-8 col-lg-push-2 col-lg-8">
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 text-left">
        <label class="control-label">Start Date & Time</label>
        @Html.TextBox("StartingDate", String.Format("{0:yyyy'-'MM'-'dd'T'HH':'mm}", Model.StartingDate), new { @class = "form-control", @type="datetime-local", @placeholder = "" })
    </div>

    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 text-left m-b-md   ">
        <label class="control-label">End Date & Time</label>
        @Html.TextBox("EndingDate", String.Format("{0:yyyy'-'MM'-'dd'T'HH':'mm}", Model.EndingDate), new { @class = "form-control", @type = "datetime-local", @placeholder = "" })
    </div>

    <div class="form-group col-xs-12 col-sm-2 col-md-2 col-lg-2 m-b-md">
        <label class="control-label" style="width: 100%; color: #fff;">Search</label>
        @Html.HiddenFor(m => m.PersonnelID)
        <button type="button" id="btn_search_crewmovement" class="btn btn-primary font-bold pull-left"><i class="fa fa-search"></i> Search</button>
    </div>
</div>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 m-b-sm" style="padding: 0px;">
    <div class="tabs-container" style="border: 1px solid #009688;">
        <ul class="nav nav-tabs">
            <li class="active" style="width: 50%;">
                <a data-toggle="tab" href="#tab-1" style="text-align: center; padding: 10px 5px;" onclick="CrewMovementListSearch();">Movement Mangement</a>
            </li>
            <li class="" style="width: 50%;">
                <a data-toggle="tab" href="#tab-2" style="text-align: center; padding: 10px 5px;" onclick="ViewActualCrewMovement();">Actual Movement</a>
            </li>
        </ul>
        <div class="tab-content" style="margin-top: 0px; max-height: unset; overflow-x: auto; overflow-y: hidden;">
            <div id="tab-1" class="tab-pane active">
                <div class="panel-body" style="padding: 10px; border: 1px solid #e5e6e7; overflow-y: auto;">
                    @Html.Partial("~/Views/Movement/CrewMovement/_CrewMovementListSearch.cshtml")
                </div>
            </div>
            <div id="tab-2" class="tab-pane">
                <div class="panel-body" style="padding: 10px; border: 1px solid #e5e6e7;">
                </div>
            </div>
        </div>
    </div>
</div>
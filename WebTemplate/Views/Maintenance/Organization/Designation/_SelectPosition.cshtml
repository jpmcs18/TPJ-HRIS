@model WebTemplate.Models.Maintenance.Organization.Designation.Management
@{
    var positionlist = (new DataAccessLayer.Organization.Position()).GetLookup();
}
@Html.LabelFor(m => m.Designation.PositionID, new { @class = "control-label" })
<div class="input-group">
    @Html.DropDownListFor(m => m.Designation.PositionID, new SelectList(positionlist, "ID", "Description"), "N/A", new { @class = "form-control", @id = "select_pos" })
    <span class="input-group-btn">
        <button type="button" id="btn_add_pos" class="btn btn-primary font-bold"><i class="fa fa-plus"></i></button>
        <button type="button" id="btn_edit_pos" class="btn btn-primary font-bold"><i class="fa fa-pencil"></i></button>
        <button type="button" id="btn_del_pos" class="btn btn-primary font-bold"><i class="fa fa-times"></i></button>
    </span>
</div>
<div class="text-danger">
    @Html.ValidationMessageFor(m => m.Designation.PositionID)
</div>
@model WebTemplate.Models.Maintenance.Organization.Designation.Management
@{
    var departmentlist = (new DataAccessLayer.Organization.Department()).GetLookup();
}
@Html.LabelFor(m => m.Designation.DepartmentID, new { @class = "control-label" })
<div class="input-group">
    @Html.DropDownListFor(m => m.Designation.DepartmentID, new SelectList(departmentlist, "ID", "Description"), "N/A", new { @class = "form-control", @id = "select_dept" })
    <span class="input-group-btn">
        <button type="button" id="btn_add_dept" class="btn btn-primary font-bold"><i class="fa fa-plus"></i></button>
        <button type="button" id="btn_edit_dept" class="btn btn-primary font-bold"><i class="fa fa-pencil"></i></button>
        <button type="button" id="btn_del_dept" class="btn btn-primary font-bold"><i class="fa fa-times"></i></button>
    </span>
</div>
<div class="text-danger">
    @Html.ValidationMessageFor(m => m.Designation.DepartmentID)
</div>
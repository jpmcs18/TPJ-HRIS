<script type="text/javascript">
    $(document).ready(function () {
        event_search();
    });

    function manage(id) {
        $.ajax({
            url: '@Url.Action("Management", "Maintenance/Organization/Department")',
            data: { uid : id },
            type: "GET",
            cache: false,
            beforeSend: function () {
                ShowLoadingScreen()
            },
            complete: function () {
                RemoveLoadingScreen()
            },
            success: function (response) {
                $("#formpost").html(response);
                $('#modal_management').appendTo("body").modal('show');
                event_save();
                Select2Override();
            },
            error: function () {
                toastr.error('AJAX backend error', 'An error has occured.');
            }
        });
    }

    function event_save() {
        $(".touchspin").TouchSpin({
            verticalbuttons: true,
            buttondown_class: 'btn btn-white',
            buttonup_class: 'btn btn-white'
        });

        $('#btnsave_dept').click(function () {
            $.ajax({
                url: '@Url.Action("Save", "Maintenance/Organization/Department")',
                data: params,
                type: "POST",
                cache: false,
                beforeSend: function () {
                    ShowLoadingScreen()
                },
                complete: function () {
                    RemoveLoadingScreen()
                },
                success: function (response) {
                    if (response != null) {
                        if (response.success == true) {
                            toastr.success('Record Saved.');
                            manage(response.id)
                        }
                        else if (response.success == false) {
                            toastr.error(response.msg, 'An error has occured.');
                        }
                    }
                },
                error: function () {
                    toastr.error('AJAX backend error', 'An error has occured.');
                }
            })
        });

        $('#txtfilter').keydown(function () {
            var value = $(this).val().toLowerCase();
            $("#modal_management table tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        $('#btnclose_dept').click(function () {
            $('#modal_management').modal('hide')
            search();
        })
    }

    function event_search() {
        $('#Filter').keydown(function () {
            if (event.keyCode == 13) {
                $('#btn_search').click();
            }
        });

        $('#btn_search').click(function () {
            $('#form_search_params input[name="PageNumber"]').val($(this).val());
            search();
        });

        $('#btnadd').click(function () {
            manage();
        });

        $('#Filter').keydown(function () {
            if (event.keyCode == 13) {
                $('#btn_search').click();
            }
        });

        @if (ViewBag.uid != null && ViewBag.uid > 0)
        {
            @:manage('@ViewBag.uid');
        }

        $('.pages').click(function () {
            $('#form_search_params input[name="PageNumber"]').val($(this).val());
            search();
        });

        $('.btnsearch').click(function () {
            manage($(this).val());
        });

        $('.btndelete').click(function () {
            var e = this
            swal({
                title: "Do you want to delete \"" + $(e).closest('tr').find('td:eq(0)').text() + "\" ?",
                text: "",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Yes",
                cancelButtonText: "No",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isconfirm) {
                    if (isconfirm) {
                        var data = [{ name: '__RequestVerificationToken', value: $('#form_search_params input[name="__RequestVerificationToken"]').val() },
                        { name: 'uid', value: $(e).val() }]
                        $.ajax({
                            url: '@Url.Action("Delete", "Maintenance/Organization/Department")',
                            data: data,
                            cache: false,
                            type: "POST",
                            beforeSend: function () {
                                ShowLoadingScreen()
                            },
                            complete: function () {
                                RemoveLoadingScreen()
                            },
                            success: function (response) {
                                if (response != null) {
                                    if (response.success == true) {
                                        swal({
                                            title: "Success",
                                            text: "Delete Success.",
                                            type: "success",
                                        }, function () {
                                            search()
                                        });
                                    }
                                    else {
                                        swal("Failed", response.msg, "error");
                                    }
                                }
                            },
                            error: function (x, y, z) {
                                swal("Failed", "Something went wrong. Please try again.", "error");
                            }
                        })
                    }
                    else {
                        //swal("Cancelled", "Delete Cancelled", "success");
                    }
                }
            );
        });
    }

    function search() {
        var params = $('#form_search_params *').serializeArray();

        $.ajax({
            url: '@Url.Action("Index", "Maintenance/Organization/Department")',
            data: params,
            type: "GET",
            cache: false,
            beforeSend: function () {
                ShowLoadingScreen()
            },
            complete: function () {
                RemoveLoadingScreen()
            },
            success: function (response) {
                $("#form_search").html(response);
                event_search();
            },
            error: function () {
                toastr.error('AJAX backend error', 'An error has occured.');
            }
        });
    }
</script>
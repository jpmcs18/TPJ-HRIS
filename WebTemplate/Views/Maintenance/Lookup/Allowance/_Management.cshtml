@model WebTemplate.Models.Maintenance.Lookup.Allowance.Management

@if (Model != null)
{
    using (Ajax.BeginForm("CreateOrUpdate", "Maintenance/Lookup/Allowance", new AjaxOptions { HttpMethod = "POST", OnBegin = "ShowLoadingScreen()", OnComplete = "RemoveLoadingScreen()", OnSuccess = "createupdate_allowance_success", OnFailure = "toastr.error('Potentially dangerous value was detected', 'Saving failed')" }, new { @id="form" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-header">
            <div class="row">
                <div class="col-xs-10">
                    <h5 class="modal-title"></h5>
                </div>
                <div class="col-xs-2">
                    <button type="button" class="modal-tools" data-dismiss="modal" title="Click to close"><i class="fa fa-times"></i></button>
                </div>
            </div>
        </div>
        <div class="modal-body">
            <div class="row m-t-sm m-b-sm">
                @Html.HiddenFor(m => m.Allowance.ID)
                @Html.Label("Allowance")
                @Html.TextBoxFor(m => m.Allowance._Allowance, new { @class = "form-control autonumeric" })
                <br />
                @Html.Label("Currency")
                @Html.DropDownListFor(m => m.Allowance.CurrencyID, new SelectList(Model.CurrencyList, "ID", "Description"), new { @class = "form-control" })
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary btn-outline btn-w-m" type="button" id="btn-save"><i class="fa fa-save"></i>&nbsp; Save</button>
        </div>
    }
}
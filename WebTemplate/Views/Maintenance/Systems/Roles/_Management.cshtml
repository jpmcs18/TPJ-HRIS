@model WebTemplate.Models.Maintenance.Systems.Roles.Management

<div class="modal-header">
    <h5 class="modal-title">Role Management</h5>
</div>
<div class="modal-body">
    <div class="tabs-container">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> Role Info</a></li>
            <li class=""><a data-toggle="tab" href="#tab-3"><i class="fa fa-user-circle"></i> Page Access</a></li>
        </ul>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane active">
                <div class="panel-body">
                    <div id="divdetails">
                        @Html.HiddenFor(m => m.Role.ID, new { @class = "form-control" })
                        <div class="form-group row">
                            <div class="col-lg-2">
                                @Html.LabelFor(m => m.Role.RoleName, new { @class = "col-form-label" })
                            </div>
                            <div class="col-lg-4">
                                @Html.TextBoxFor(m => m.Role.RoleName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2">
                                @Html.LabelFor(m => m.Role.RoleDescription, new { @class = "col-form-label" })
                            </div>
                            <div class="col-lg-4">
                                @Html.TextBoxFor(m => m.Role.RoleDescription, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="tab-3" class="tab-pane">
                <div class="panel-body">
                    @Html.Partial("~/Views/Maintenance/Systems/Roles/_Pages.cshtml")
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-outline btn-w-m font-bold-700" data-dismiss="modal" onclick="search()">Close</button>
    <button type="button" class="btn btn-primary btn-w-m font-bold-700" id="btnsave">Save</button>
</div>
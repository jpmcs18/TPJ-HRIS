@model WebTemplate.Models.Maintenance.Systems.Roles.Index
@{
    var PageAccess = (Session["CredentialPages"] as DataAccessLayer.Security.CredentialPages).GetPage("Maintenance/Systems/Roles");
    var statuslist = (new DataAccessLayer.System.User()).LookupUserStatus();

    ViewBag.title = PageAccess.PageName;
}

<div class="wrapper wrapper-content">
    <div class="page-heading">
        <div class="col-lg-8">
            @Html.Partial("~/Views/Shared/_Breadcrumbs.cshtml", PageAccess)
        </div>
        <div class="col-lg-4">
            <div class="title-action">
                @if (PageAccess.Insert)
                {
                    <a class="btn btn-primary compose-mail" href="#" id="btnadd">New User</a>
                }
            </div>
        </div>
    </div>
    <div id="form_search" class="panel-body" style="margin-top: 80px;">
        @Html.Partial("~/Views/Maintenance/Systems/Roles/_Search.cshtml")
    </div>
</div>

<div class="modal inmodal custom-modal" id="modal_management" data-backdrop="static" data-keyboard="false" tabindex="" role="dialog" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-center vertical-align-center">
            <div class="modal-content animated fadeInDown modal-width-100">
                <div id="formpost"></div>
            </div>
        </div>
    </div>
</div>

<div id="floating-buttons" class="menu pmd-floating-action" role="navigation">
    <button type="button" id="btnadd" class="btn btn-lg btn-circle pmd-floating-action-btn pmd-btn-fab pmd-btn-raised pmd-ripple-effect btn-primary" data-title="Create New">
        <i class="fa fa-plus"></i>
    </button>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        event_search();
    });

    function manage(id, idx = null) {
        $.ajax({
            url: '@Url.Action("Management", "Maintenance/Systems/Roles")',
            data: { uid : id },
            type: "GET",
            cache: false,
            beforeSend: function () {
                ShowLoadingScreen()
            },
            complete: function () {
                RemoveLoadingScreen()
            },
            success: function (response) {
                $("#formpost").html(response);
                $('#modal_management').appendTo("body").modal('show');
                event_save();
                event_items();
                if (idx > -1) {
                    $('ul.nav-tabs').find('a').eq(idx).click()
                }
            },
            error: function () {
                toastr.error('AJAX backend error', 'An error has occured.');
            }
        });
    }

    function event_save() {
        Select2Override();

        $('#btnsave').click(function () {
            var params = $('#formpost *').serializeArray();

            $.ajax({
                url: '@Url.Action("Save", "Maintenance/Systems/Roles")',
                data: params,
                type: "POST",
                cache: false,
                beforeSend: function () {
                    ShowLoadingScreen()
                },
                complete: function () {
                    RemoveLoadingScreen()
                },
                success: function (response) {
                    if (response != null) {
                        if (response.success == true) {
                            toastr.success('Record Saved.');
                            manage(response.id)
                        }
                        else if (response.success == false) {
                            toastr.error(response.msg, 'An error has occured.');
                        }
                    }
                },
                error: function () {
                    toastr.error('AJAX backend error', 'An error has occured.');
                }
            })
        });
    }

    function event_search() {
        $('.footable').footable();
        Select2Override();

        $('.pages').click(function () {
            $('#form_search_params input[name="PageNumber"]').val($(this).val());
            search();
        });

        $('#Filter').keydown(function () {
            if (event.keyCode == 13) {
                $('#btn_search').click();
            }
        });

        $('#btn_search').click(function () {
            $('#form_search_params input[name="PageNumber"]').val($(this).val());
            search();
        });

        $('.btnsearch').click(function () {
            manage($(this).val());
        });

        $('.btndelete').click(function () {
            var e = this
            swal({
                title: "Do you want to delete \"" + $(e).closest('tr').find('td:eq(0)').text() + "\" ?",
                text: "",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Yes",
                cancelButtonText: "No",
                closeOnConfirm: false,
                closeOnCancel: false
            },
            function (isconfirm) {
                if (isconfirm) {
                    var data = [{ name: '__RequestVerificationToken', value: $('#form_search_params input[name="__RequestVerificationToken"]').val() },
                        { name: 'uid', value: $(e).val() }]
                    $.ajax({
                        url: '@Url.Action("Delete", "Maintenance/Systems/Roles")',
                        data: data,
                        cache: false,
                        type: "POST",
                        beforeSend: function () {
                            ShowLoadingScreen()
                        },
                        complete: function () {
                            RemoveLoadingScreen()
                        },
                        success: function (response) {
                            if (response != null) {
                                if (response.success == true) {
                                    swal({
                                        title: "Success",
                                        text: "Delete Success.",
                                        type: "success",
                                    }, function () {
                                        search();
                                    });
                                }
                                else {
                                    swal("Failed", response.msg, "error" );
                                }
                            }
                        },
                        error: function (x, y, z) {
                            swal("Failed", "Something went wrong. Please try again.", "error");
                        }
                    })
                }
                else {
                    //swal("Cancelled", "Delete Cancelled", "success");
                    }
                }
            );
        })
    }

    function search() {
        var params = $('#form_search_params *').serializeArray();

        $.ajax({
            url: '@Url.Action("Index", "Maintenance/Systems/Roles")',
            data: params,
            type: "GET",
            cache: false,
            beforeSend: function () {
                ShowLoadingScreen();
            },
            complete: function () {
                RemoveLoadingScreen();
            },
            success: function (response) {
                $("#form_search").html(response);
                event_search();
            },
            error: function () {
                toastr.error('AJAX backend error', 'An error has occured.');
            }
        });
    }

    function event_items() {
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });

        $('#btnadditem').click(function () {
            $.ajax({
                url: '@Url.Action("AddPage", "Maintenance/Systems/Roles")',
                data: $('#formpost').serializeArray().concat({ name: 'SelectedPageAccess.PageID', value: $('#selectitem').val() }),
                type: "POST",
                cache: false,
                beforeSend: function () {
                    ShowLoadingScreen();
                },
                complete: function () {
                    RemoveLoadingScreen();
                },
                success: function (response) {
                    $("#divitems").replaceWith(response);
                    event_items();
                },
                error: function () {
                    toastr.error('AJAX backend error', 'An error has occured.');
                }
            });
        });

        $('.btnremoveitem').click(function () {
            $.ajax({
                url: '@Url.Action("RemovePage", "Maintenance/Systems/Roles")',
                data: $('#formpost').serializeArray().concat({ name: 'SelectedPageAccess.PageID', value: $(this).val() }),
                type: "POST",
                cache: false,
                beforeSend: function () {
                    ShowLoadingScreen()
                },
                complete: function () {
                    RemoveLoadingScreen()
                },
                success: function (response) {
                    $("#divitems").replaceWith(response);
                    event_items();
                },
                error: function () {
                    toastr.error('AJAX backend error', 'An error has occured.');
                }
            });
        });

        $('#modal_management select').select2();
        
        $('#txtfilter').keydown(function () {
            var value = $(this).val().toLowerCase();
            $("#modal_management table tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });

            if ($("#modal_management table tbody tr:visible").length == 0) {
                $("#modal_management table tbody tr #No-Row-Display").show();
            }
            else {
                $("#modal_management table tbody tr #No-Row-Display").hide();
            }
        });

        event_search();

        $('#btnadd').click(function () {
            manage();
        });

        @if (ViewBag.uid != null && ViewBag.uid > 0)
        {
            @:manage('@ViewBag.uid')
        }
    }
</script>
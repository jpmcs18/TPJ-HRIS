                                        <button type="button" name="id" class="btn btn-primary btn-lg btn-rounded ApprovePersonnelApproval" value="@Model.Personnel[i].ID" title="Approve"><i class="fa fa-thumbs-o-up"></i></button>
                                    </div>
                                }
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr id="No-Row-Display"><td style="text-align: center;" colspan="10">No records found...</td></tr>
            }
            <tr id="Row-Loading-Display" class="hidden">
                <td style="text-align: center;" colspan="10">
                    <i id="" class="fa fa-rotate-left rotate" style="padding: 8px; font-size: 20px; text-align: right;"></i>
                </td>
            </tr>
        </tbody>
    </table>
</div>

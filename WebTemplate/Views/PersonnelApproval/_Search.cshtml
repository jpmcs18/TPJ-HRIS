                    var RowColorLabel = ""; // Model.Personnel[i].Cancelled ?? false) ? " label-danger" : Model.Personnel[i].Approved ?? false) ? " label-primary" : Model.Personnel[i].ModifiedBy != null ? " label-success" : " label-info";
                                            //var Expired = Model.Personnel[i].IsExpired;
                    var Approved = (Model.Personnel[i].Approved ?? false);
                    //var Noted = (Model.Personnel[i].Noted ?? false);
                    var Cancelled = (Model.Personnel[i].Cancelled ?? false);
                    var IsPending = !Approved && !Cancelled;

                    var LastStatus = Approved ? "<span class='label label-primary'>Approved</span>" : (Cancelled ? "<span class='label label-danger'>Cancelled</span>" : ""); //(Expired ? "<span class='label label-warning'>Expired</span>" : "<span class='label label-info'>Pending</span>")
                                                                                                                                                                              //var LastUser = Cancelled ? Model.Personnel[i]._Cancel : Approved ? Model.Personnel[i]._Approver : Model.Personnel[i].ModifiedBy != null ? Model.Personnel[i]._Modifier : Model.Personnel[i]._Creator;
                                                                                                                                                                              //var LastDate = Cancelled ? Model.Personnel[i].CancelledOn : Approved ? Model.Personnel[i].ApprovedOn : Model.Personnel[i].ModifiedBy != null ? Model.Personnel[i].ModifiedOn : Model.Personnel[i].CreatedOn;


                    <tr id="Row-Display-Personnel-@Model.Personnel[i].ID" class="Row-Display Row-Display-Personnel @RowColorLabel" style="">
                        <td class="text-left">
                            @Html.Hidden("id", Model.Personnel[i].ID)
                            @Model.Personnel[i].FullName
                        </td>
                        <td class="text-center">@Html.Raw(LastStatus)</td>
                        @*<td class="text-center">
                                @Html.Raw(String.Format("{0:MMM dd, yyyy}", Model.Personnel[i].RequestDate))
                            </td>
                            <td class="text-left">

@model ProcessLayer.Entities.Vessel
@{
    var vessels = ProcessLayer.Processes.VesselProcess.Instance.GetList();
}

<tr id="Row-Display-Vessel-@Model.ID" class="Row-Display">
    <td style="text-align: center;">
        <input type="hidden" value="@Model.ID" />
        @Model.Code
    </td>
    <td style="text-align: center;">@Model.Description</td>
    <td style="text-align: center;">@Model.GrossTon</td>
    <td style="text-align: center;">@Model.NetTon</td>
    <td style="text-align: center;">@Model.HP</td>
    <td style="text-align: center;">
        <div class="btn-group">
            <button type="button" name="DeleteVessel" class="btn btn-outline btn-danger btn-sm btn-rounded DeleteVessel" value="@Model.ID" title="Delete"><i class="fa fa-trash"></i></button>
            <button type="button" name="ViewMembers" class="btn btn-primary btn-sm btn-rounded ViewMembers" value="@Model.ID" title="View Members"><i class="fa fa-eye"></i></button>
            <button type="button" name="EditVessel" class="btn btn-info btn-sm btn-rounded EditVessel" value="@Model.ID" title="Edit"><i class="fa fa-pencil"></i></button>
        </div>
    </td>
</tr>
<tr id="Row-Input-Vessel-@Model.ID" class="Row-Input hidden">
    <td style="text-align: center;">
        @Html.HiddenFor(m => m.ID);
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control text-transform-none" })
    </td>
    <td style="text-align: center;">
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control text-transform-none" })
    </td>
    <td style="text-align: center;">
        @Html.TextBoxFor(m => m.GrossTon, new { @class = "form-control text-transform-none" })
    </td>
    <td style="text-align: center;">
        @Html.TextBoxFor(m => m.NetTon, new { @class = "form-control text-transform-none" })
    </td>
    <td style="text-align: center;">
        @Html.TextBoxFor(m => m.HP, new { @class = "form-control text-transform-none" })
    </td>
    <td style="text-align: center;">
        <div class="btn-group">
            <button type="button" name="CancelVessel" class="btn btn-outline btn-warning btn-sm btn-rounded CancelVessel" value="@Model.ID" title="Cancel"><i class="fa fa-times"></i></button>
            <button type="button" name="SaveVessel" class="btn btn-info btn-sm btn-rounded SaveVessel" value="@Model.ID" title="Save"><i class="fa fa-save"></i></button>
        </div>
    </td>
</tr>


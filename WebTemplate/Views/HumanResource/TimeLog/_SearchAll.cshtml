<div id="form_search_params" class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding: 0px;">
    @Html.AntiForgeryToken()
    <div class="form-group col-xs-12 col-sm-12 col-md-3 col-lg-2">
        <label class="control-label">Start Date & Time</label>
        @Html.TextBox("start", String.Format("{0:yyyy'-'MM'-'dd}", ""), new { @type = "datetime-local", @class = "form-control" })
    </div>

    <div class="form-group col-xs-12 col-sm-12 col-md-3 col-lg-2">
        <label class="control-label">End Date & Time</label>
        @Html.TextBox("end", String.Format("{0:yyyy'-'MM'-'dd}", ""), new { @type = "datetime-local", @class = "form-control" })
    </div>
</div>
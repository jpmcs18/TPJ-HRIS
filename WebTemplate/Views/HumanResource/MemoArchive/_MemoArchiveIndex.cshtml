        function SelectRow() {
            $tableName = $(this).closest('table');
            $tr = $(this).closest('tr');
            $b = $tr.find('button');
            $cb = $tr.find('input[type="checkbox"]');

            $tableName.find('button').removeClass('btn-primary').addClass('btn-white');

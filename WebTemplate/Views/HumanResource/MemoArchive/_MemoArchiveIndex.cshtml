        function EnableDelete() {
            var id = parseFloat($(this).val() ? $(this).val() : 0);
            var description = $(this).closest('tr').find('.clickable-text').text().trim();

            if ($(this).is(':checked')) {
                $_SelectedRows = $_SelectedRows.filter(function (e) { return e.ID !== id; });
            }

@model WebTemplate.Models.MemoArchives.PolicyAndProcedure.Management

@{
    var currentDate = DateTime.Now;
}

<div id="No-Chat-Internet" class="text-white bg-danger text-center m-b-xs hidden" style="font-size: 15px; padding: 4px;/* margin: 0 4px; */">
    No internet connection
</div>
<div id="NewMemo">
    <div class="row" id="MemoFields">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding: 0;">
            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">Memo No.</label>
                <input type="text" value="@Model.PolicyAndProcedure.MemoNo" name="MemoNo" class="form-control text-transform-none" placeholder="Memo No" />
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">Subject</label>
                <input value="@Model.PolicyAndProcedure.Subject" style="resize: none;" name="Subject" class="form-control text-transform-none" placeholder="Subject" />
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">Date</label>
                <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    @Html.TextBox("MemoDate", String.Format("{0:yyyy'-'MM'-'dd}", Model.PolicyAndProcedure.MemoDate ?? currentDate), new { @type = "date", @class = "form-control" })
                </div>
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-8 col-lg-8">
                <label class="control-label">Description</label>
                <input value="@Model.PolicyAndProcedure.Description" style="resize: none;" name="Description" class="form-control text-transform-none" placeholder="Description" />
            </div>


            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">File</label>
                <input type="hidden" id="" name="" value="" class="">
                <input type="file" id="browseFile" name="" value="" class="browsefile form-control">
            </div>
        </div>
    </div>


    <div id="SearchPersonnelOrGroup">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="radio i-checks"><label><i><input type="radio" class="radioMemberType radio-personnel" checked="" value="Personnel" name="a"> </i> Single </label></div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="radio i-checks"><label> <i><input type="radio" class="radioMemberType radio-group" value="Group" name="a"> </i> Group </label></div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="radio i-checks"><label> <i><input type="radio" class="radioMemberType radio-vessel" value="Vessel" name="a"> </i> Vessel </label></div>
            </div>
        </div>
        <div class="" style="">
            <div id="SearchTable" class="tablediv">
                <div id="SearchPersonnelDiv" class="input-group m-b-sm" style="width: 100%;">
                    <input id="SearchPersonnelInput" class="form-control search-input" placeholder="Search Personnel..." />
                    <span class="input-group-addon" id="SearchPersonnel" style="cursor: pointer;"><i class="fa fa-search"></i></span>
                </div>
                <div id="SearchTableDiv">
                    @Html.Partial("~/Views/MemoArchives/PolicyAndProcedure/_SearchPersonnel.cshtml", Model)
                </div>
            </div>
            <div id="GroupTable" class="tablediv" style="display: none;">
                <div id="SearchGroupDiv" class="input-group m-b-sm" style="width: 100%;">
                    <input id="SearchGroupInput" class="form-control search-input" placeholder="Search Group..." />
                    <span class="input-group-addon" id="SearchGroup" style="cursor: pointer;"><i class="fa fa-search"></i></span>
                </div>
                <div id="GroupTableDiv">
                    @Html.Partial("~/Views/MemoArchives/PolicyAndProcedure/_SearchGroup.cshtml", Model)
                </div>
            </div>
            <div id="VesselTable" class="tablediv" style="display: none;">
                <div id="SearchVesselDiv" class="input-group m-b-sm" style="width: 100%;">
                    <input id="SearchVesselInput" class="form-control search-input" placeholder="Search Vessel..." />
                    <span class="input-group-addon" id="SearchVessel" style="cursor: pointer;"><i class="fa fa-search"></i></span>
                </div>
                <div id="VesselTableDiv">
                    @Html.Partial("~/Views/MemoArchives/PolicyAndProcedure/_SearchVessel.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</div>

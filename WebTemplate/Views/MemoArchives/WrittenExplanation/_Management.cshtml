@model WebTemplate.Models.MemoArchives.WrittenExplanation.Management

@{
    var currentDate = DateTime.Now;
}

<div id="No-Chat-Internet" class="text-white bg-danger text-center m-b-xs hidden" style="font-size: 15px; padding: 4px;/* margin: 0 4px; */">
    No internet connection
</div>
<div>
    <div class="row" id="MemoFields">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding: 0;">
            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">Memo No.</label>
                <input type="text" value="@Model.WrittenExplanation.MemoNo" name="MemoNo" class="form-control text-transform-none" placeholder="Memo No" />
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">Subject</label>
                <input value="@Model.WrittenExplanation.Subject" style="resize: none;" name="Subject" class="form-control text-transform-none" placeholder="Subject" />
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">Date</label>
                <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    @Html.TextBox("MemoDate", String.Format("{0:yyyy'-'MM'-'dd}", Model.WrittenExplanation.MemoDate ?? currentDate), new { @type = "date", @class = "form-control" })
                </div>
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">Description</label>
                <input value="@Model.WrittenExplanation.Description" style="resize: none;" name="Description" class="form-control text-transform-none" placeholder="Description" />
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">Incident Report</label>
                <input type="file" id="incidentReportFile" name="" value="" class="browsefile form-control">
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label class="control-label">File</label>
                <input type="file" id="writtenExplanationFile" name="" value="" class="browsefile form-control">
            </div>
        </div>
    </div>

    <div id="SearchPersonnelOrGroup">
        <div class="" style="">
            <div id="SearchTable" class="tablediv">
                <div id="SearchPersonnelDiv" class="input-group m-b-sm" style="width: 100%;">
                    <input id="SearchPersonnelInput" class="form-control" placeholder="Search Personnel..." />
                    <span class="input-group-addon" id="SearchPersonnel" style="cursor: pointer;"><i class="fa fa-search"></i></span>
                </div>
                <div id="SearchTableDiv">
                    @Html.Partial("~/Views/MemoArchives/WrittenExplanation/_SearchPersonnel.cshtml")
                </div>
            </div>
        </div>
    </div>
</div>

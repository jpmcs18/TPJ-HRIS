        function removeSpinnerThenToast(toastType, toastMsg) {
            $('div.ibox-content').removeClass('sk-loading');
            $('body').removeClass('sk-loading');//.css('overflow', 'hidden');
            if (toastType == 'success') { toastr.success(toastMsg); }
            else if (toastType == 'error') { toastr.error(toastMsg); }
            else if (toastType == 'warning') { toastr.warning(toastMsg); }
        }
        function addToggleSpinners() {
            $('body').find('div.sk-spinner').remove();

            var skWanderingCubes = '<div class="sk-spinner sk-spinner-wandering-cubes"><div class="sk-cube1"></div><div class="sk-cube2"></div></div>';

            $('body').prepend(skWanderingCubes);

            $('button[type="submit"]').addClass('toggleSpinners');

            $('div.front-drop').css({
                'width': '100%',
                'height': '100%',
                'background': '#7b7b7b',
                'opacity': '0.5'
            });
        }
        function toggleSpinnerClick() {
            $('.toggleSpinners').on('click', function () {
                $('body').toggleClass('sk-loading');//.css('overflow', 'hidden');
                $('input').focusout();
            });
        }

        function Select2Override() {
            //add 'select2' class to all dropdowns
            $("select.form-control").addClass("select2");
            //changing element style
            $("select.form-control").css({
                'width': '100%',
                'color': '#999'
            });
            //declare select2
            $(".select2").select2({});
            //overriding 'span.select2-selection' element style
            $("span.select2-selection").css({
                'width': '100%',
                'height': '34px',
                'padding': '3px',
                'font-size': '14px',
                'border': '1px solid #cbd1d5',
                'border-radius': '3px'
            });
            $("span.select2-selection__rendered").css({
                'color': '#999'
            });
            $('span.select2-dropdown--below').css({
                'z-index': '3000'
            });
            //overriding 'span.select2-selection__arrow' element style
            $("span.select2-selection__arrow").css({
                'height': '34px'
            });
            //readonly and date input override for datepickers
            $('div.date').children('input.form-control').removeAttr('readonly');
            $('div.date').children('input.form-control').attr({
                'data-mask': '99/99/9999',
                'placeholder': 'MM/DD/YYYY'
            });
            //$('div.date').children('input.form-control')
        }


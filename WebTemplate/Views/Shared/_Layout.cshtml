        function SetRowLoadingDisplayColSpan() {
            var colspan = $('table thead th').length;

            $('table').each(function (e) {
                $(this).find('tr#Row-Loading-Display td').attr('colspan', colspan);
                $(this).find('tr#No-Row-Display td').attr('colspan', colspan);
            });
        }

        function ShowHideRowLoadingDisplay(table, isShow) {
            if (isShow) {
                $('#' + table + ' tbody tr').addClass('hidden');
                $('#' + table + ' tbody tr#Row-Loading-Display').removeClass('hidden');
            }
            else {
                $('#' + table + ' tbody tr').removeClass('hidden');
                $('#' + table + ' tbody tr#Row-Loading-Display').addClass('hidden');
            }
        }

        function setSkLoadingHeight() {
            var h = $('#wrapper').innerHeight();
            $('body.sk-loading:after').height(h);
        }
        function floatingButtonFunctions() {
            function hideButtons() {
                $('#floating-Action i').css({
                    '-ms-transform': 'rotate(90deg)', /* IE 9 */
                    '-webkit - transform': 'rotate(90deg)', /* Chrome, Safari, Opera */
                    'transform': 'rotate(90deg)',
                    'transition': 'all .2s ease-out'
                });
            }
            hideButtons();
            function showButtons() {
                $('#floating-Action i').css({
                    '-ms-transform': 'rotate(-135deg)', /* IE 9 */
                    '-webkit - transform': 'rotate(-135deg)', /* Chrome, Safari, Opera */
                    'transform': 'rotate(-135deg)',
                    'transition': 'all .2s ease-out'
                });
            }
            $('#MainSave').css('display', 'none');
            $('#MainAdd').css('display', 'none');
            $('#MainCancel').css('visibility', 'hidden');
            var action = false;
            $('#floating-buttons').mouseover(function () {
                showButtons();
            });
            $('#floating-buttons').mouseleave(function () {
                hideButtons();
            });
            $('#floating-Action').on('click', function () {
                if (action == true) { action = false; hideButtons(); }
                else { action = true; showButtons(); }
            });
            $('#floating-Action').mouseover(function () {
                showButtons();
            });
            $('#floating-Action').mouseleave(function () {
                hideButtons();
            });
            $('#floating-btn2').mouseover(function () {
                showButtons();
            });
            $('#floating-btn2').mouseleave(function () {
                hideButtons();
            });
            $('#floating-btn1').mouseover(function () {
                showButtons();
            });
            $('#floating-btn1').mouseleave(function () {
                hideButtons();
            });
        }
        function pageHeadingClassOverride() {
            $div1 = $('div.page-heading > :first-child');
            $div1.removeClass();
            //$div1.addClass('col-xs-12 col-sm-12 col-md-12 col-lg-12');
            $div1.addClass('col-xs-9 col-sm-8 col-md-8 col-lg-8');
            $div1.find('li a').addClass('toggleSpinners');

            $div2 = $('div.page-heading > :first-child').next();
            $div2.removeClass();
            $div2.addClass('col-xs-3 col-sm-4 col-md-4 col-lg-4');

            $title = $('div.page-heading > :first-child > :first-child');
            var titleText = $title.text();
            $div1.prepend('<h2>' + titleText + '</h2>');
            $title.remove();
